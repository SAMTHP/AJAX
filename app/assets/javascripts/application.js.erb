function preparePage() {
	var myObject = $(".liste").click(function(){
		$(".object").toggle();

	});

	var myShow = $(".show").click(function(){
		var showCssId = $(this).attr('id');
		var emailId = showCssId.substring(0,showCssId.indexOf('-'));
		$('#body-'+emailId).toggle();
		$('#body-'+emailId).css('backgroundColor','#F4A460');
		if (myShow){
			$(".content").toggle();
		}
	});

	// Cacher le div au chargement initial de la page.
	$(".liste").css('backgroundColor','grey');
	$(".content").css('backgroundColor','#74D0F1');
	$(".object").css('display','none');
	// $(".object").css('backgroundColor','#F4A460');
	$(".body").css('display','none');
	$(".content").css('display','none');


}



$(document).ready(function () {
 preparePage();

});